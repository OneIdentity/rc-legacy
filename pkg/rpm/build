#! /bin/sh
set -e

if [ `id -u` -ne 0 ]; then
	echo "This script must be run as root (or similar). Current user is `id -un`."
	exit 1;
fi

CURDIR=`dirname $0`
cd $CURDIR

. ../build.config

if [ -f /etc/debian_version ]; then
	RPMDIR=/usr/src/rpm
else
	echo "Unknown platform, can't set RPMDIR"
	exit 1
fi

cp ../$NAME-$VERSION.tar.gz $RPMDIR/SOURCES

sed -e "s/@\[VERSION]/$VERSION/g" < vas-apps.spec.in > vas-apps.spec

# TODO: Include archive signing
rpmbuild --timecheck 3600 --buildroot /var/tmp/build-vas_apps/buildroot -ba vas-apps.spec
